{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "utils/**/*.ts",
    "middlewares/**/*.ts",
    "services/**/*.ts",
    "interfaces/**/*.ts",
    "enums/**/*.ts"
  ]
}
